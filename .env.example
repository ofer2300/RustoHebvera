# Server Configuration
PORT=8080
HOST=0.0.0.0
RUST_LOG=info

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/rusto_hebru
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://rusto-hebru.vercel.app

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION_SECS=60

# Neural Model Configuration
MODEL_PATH=/path/to/model
DEVICE=cpu  # או gpu

# Monitoring
PROMETHEUS_ENDPOINT=/metrics
METRICS_PORT=9090

# Cache Configuration
CACHE_TTL_SECS=3600
MAX_CACHE_SIZE=10000

# External Services
TRANSLATION_API_KEY=your_api_key_here
TECHNICAL_TERMS_API_URL=https://api.example.com/terms 